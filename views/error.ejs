<%- layout("layouts/boilerplate") %>

    <div class="row justify-content-center">
        <div class="col-6">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    Error:<%= err.statusCode %>
                        <%= err.message %>
                </h4>
                <% if (process.env.NODE_ENV !=="production" ){ %>
                    <p>
                        <%= err.stack %>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>